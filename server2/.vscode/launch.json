    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Serverless Offline",
            "program": "${workspaceFolder}/node_modules/serverless/bin/serverless",
            // "args": ["offline", "start", "--httpPrt", "4000"]
            "args": ["offline", "start", "--httpPrt", "4000", "--noTimeout"],
            "protocol": "inspector",
            "runtimeExecutable": "node",
            "env": {
                "tableName": "Player-2"
            },
            "windows": {
                "program": "${workspaceFolder}\\node_modules\\serverless\\bin\\serverless",
            }
        }
    ]
}